# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Environment
ENVIRONMENT=development  # development, testing, production

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Service Configuration
HOST=0.0.0.0
PORT=8000

# Agent Configuration
AGENT_TIMEOUT=60  # seconds
MAX_AGENTS=6

# Database
DATABASE_URL=sqlite:///aidevos.db

# Security Configuration
JWT_SECRET_KEY=change_me_in_production  # Used for JWT token generation and validation
JWT_ALGORITHM=HS256  # Algorithm used for JWT token
ACCESS_TOKEN_EXPIRE_MINUTES=30  # Token expiration time in minutes
ENCRYPTION_KEY=generate_with_encryption_manager_for_production  # Used for data encryption

# TLS/SSL Configuration
SSL_ENABLED=false  # Set to true to enable HTTPS
SSL_CERT_PATH=/path/to/cert.pem  # Path to SSL certificate
SSL_KEY_PATH=/path/to/key.pem  # Path to SSL private key

# API Security
RATE_LIMIT_MAX_REQUESTS=100  # Maximum number of requests per window
RATE_LIMIT_WINDOW_SECONDS=60  # Time window for rate limiting in seconds
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-app-domain.com  # Allowed CORS origins

# Security Scanning
SCAN_ON_COMMIT=true  # Enable security scanning on commit
SCAN_DEPENDENCIES=true  # Enable dependency vulnerability scanning

# DevOps & QA Configuration
DEPLOYMENT_ENVIRONMENT=dev  # dev, staging, production
DEPLOYMENT_STRATEGY=blue-green  # blue-green, canary, rolling
DOCKER_REGISTRY=aidevos  # Docker registry for container images
KUBE_CONFIG_PATH=~/.kube/config  # Path to Kubernetes config file

# AWS Configuration (for Terraform)
AWS_REGION=us-west-2  # AWS region for infrastructure
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here  # AWS access key ID
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here  # AWS secret access key

# CI/CD Pipeline Configuration
CI_PIPELINE_TIMEOUT=30  # CI pipeline timeout in minutes
CD_PIPELINE_TIMEOUT=60  # CD pipeline timeout in minutes
GITHUB_TOKEN=your_github_token_here  # GitHub token for GitHub Actions
AUTO_DEPLOY_TO_DEV=true  # Automatically deploy to dev environment
AUTO_DEPLOY_TO_STAGING=false  # Automatically deploy to staging environment
AUTO_DEPLOY_TO_PRODUCTION=false  # Automatically deploy to production environment

# Monitoring Configuration
PROMETHEUS_URL=http://localhost:9090  # Prometheus URL
GRAFANA_URL=http://localhost:3000  # Grafana URL
LOKI_URL=http://localhost:3100  # Loki URL
ALERTMANAGER_URL=http://localhost:9093  # AlertManager URL
JAEGER_URL=http://localhost:16686  # Jaeger URL
METRICS_RETENTION_DAYS=15  # Number of days to retain metrics
LOGS_RETENTION_DAYS=30  # Number of days to retain logs

# Self-Improvement Configuration
ANALYSIS_INTERVAL=3600  # Seconds between analysis runs
AUTO_APPLY_THRESHOLD=medium  # Priority threshold for automatic optimization application
OPTIMIZATION_TYPES=performance,resource_usage,reliability,security,feature  # Optimization types to analyze
