# Database configuration
DATABASE_URL=postgres://postgres:postgres@localhost/realworld_dev
TEST_DATABASE_URL=postgres://postgres:postgres@localhost/realworld_test

# Phoenix configuration
SECRET_KEY_BASE=your_secret_key_base_here
PHX_HOST=localhost
PORT=4000

# Twilio configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number
TWILIO_VOICE_CALL_URL=http://your-ngrok-url.ngrok.io/webhooks/voice
TWILIO_VOICE_CALL_METHOD=POST
TWILIO_SMS_WEBHOOK_URL=http://your-ngrok-url.ngrok.io/webhooks/sms
TEST_PHONE_NUMBER=your_test_phone_number

# Email configuration
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=your_email@example.com
TEST_EMAIL=test@example.com
# SMTP configuration (alternative to SendGrid)
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_HOST=smtp.example.com
SMTP_PORT=587

# OpenAI configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_ORGANIZATION_ID=your_openai_org_id
OPENAI_MODEL=gpt-4-turbo  # or another model of your choice

# GitHub configuration (for code deployment)
GITHUB_TOKEN=your_github_token
GITHUB_REPO=your_username/your_repo_name
GITHUB_TEST_ISSUE=123
GITHUB_OWNER=your_github_username
GITHUB_BRANCH=main

# Slack configuration (for notifications)
SLACK_BOT_TOKEN=your_slack_bot_token
SLACK_WEBHOOK_URL=your_slack_webhook_url
SLACK_API_TOKEN=your_slack_api_token
SLACK_TEST_CHANNEL=your_slack_channel_id
SLACK_NOTIFICATION_CHANNEL=general

# Application settings
LOG_LEVEL=debug
ENABLE_VOICE_COMMANDS=true
ENABLE_SMS_COMMANDS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SLACK_NOTIFICATIONS=true
ENABLE_GITHUB_INTEGRATION=true

# User for CLI tests
AUTODEV_USER=dev@example.com

# Webhook security
WEBHOOK_SECRET=your_webhook_secret_for_securing_endpoints

# File storage configuration (for generated code)
FILE_STORAGE_PATH=./priv/generated_code
BACKUP_STORAGE_PATH=./priv/backups

# Monitoring settings
MONITOR_INTERVAL_SECONDS=60
NOTIFICATION_RETRY_ATTEMPTS=3
DEFAULT_NOTIFICATION_METHOD=email  # Options: email, sms, voice, slack
